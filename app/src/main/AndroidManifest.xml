        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ELEC1Compilation"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add all other exercise activities -->
        <activity android:name=".guided_exercises.FirstGuidedExercise" />
        <activity android:name=".guided_exercises.SecondGuidedExercise" />
        <activity android:name=".guided_exercises.ThirdGuidedExercise" />
        <activity android:name=".guided_exercises.FourthGuidedExercise" />
        <activity android:name=".guided_exercises.FifthGuidedExercise" />
        <activity android:name=".guided_exercises.SQLiteDatabaseDemo" />

        <!-- Continue for all exercises -->
    </application>

</manifest>